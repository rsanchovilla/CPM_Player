;do not include the .COB extension in param source filename
;compile a COBOL program with VT100 support
ERA $1.COM
ERA $1.REL
ERA $1.DBG
COBOL =$1
L80 $1,CDVT100,COBLIB/S,$1/N/E
; clean up and erase $1.REL and $1.DBG
ERA $1.REL
ERA $1.DBG
$1
