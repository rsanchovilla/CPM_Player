380 FOR B=1 TO 5
390 IF L1$<>EC$(B) OR BW<>A THEN 410
400 LET BW=BW+1: P$(N-1)=P$(N-1)+L$:GOTO 470
410 IF LC<>-1 THEN 440
420 IF L1$=V$(B) THEN LC=A-BW
430 IF L1$="Y" AND A>BW THEN LC=A-BW
440 IF L1$=EC$(B) THEN EW=A: W4$=EC$(B):GOTO 500
450 NEXT B
460 IF A=LEN(L$) THEN EW=A+1: W4$=EC$(5):GOTO 500
