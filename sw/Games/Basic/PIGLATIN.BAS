280 REM      GET INPUT
290 LET LC=-1:LET BW=1: INPUT L$
300 REM      READY FOR FULL TEXT?
310 IF L$="/" OR L$="?" THEN 590
320 REM     CRLF
330 P$(N)=CR$:N=N+1
340 REM    TAKE L$ ONE CHARACTER AT A TIME
