520 LET W1$=RIGHT$(W$,LEN(W$)-LC)
530 LET W2$=LEFT$(W$,LC)
540 LET P$(N)=W1$+W2$+W3$+W4$
550 PRINT P$(N);
560 LET N=N+1:LET BW=EW+1: LET LC=-1
570 GOTO 470
